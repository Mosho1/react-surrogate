  "author": "Sharon Rolel <sharonrolel@gmail.com> (http://github.com/Mosho1)",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.1.13",
    "babel-core": "^5.1.13",
    "babel-loader": "^5.0.0",
    "expect": "^1.9.0",
    "mocha": "^2.2.4",
    "react": "^0.13.2",
    "rimraf": "^2.4.2",
    "webpack": "1.4.8"
  },
  "dependencies": {
    "react-deep-force-update": "^1.0.0",
    "tiny-emitter": "^1.0.1"
  }
}
